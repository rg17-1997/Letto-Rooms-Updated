<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/popup"
        android:layout_height="match_parent"
        tools:context=".FlatPgHostel"
        android:orientation="vertical"
        android:background="@color/back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="My place looks like..."
            android:textStyle="bold"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/white100"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnflat"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button2"
                android:text="Flat"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnpg"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="PG"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnhostel"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Hostel"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/flatbhk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="12"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/bhk1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:text="1BHK"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorHighlight="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/bhk2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="2BHK"
                    android:fontFamily="@font/open_sans_light"
                    android:padding="1dp"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/bhk3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:text="3BHK"
                    android:textColor="@color/white"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorHighlight="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/bhk4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:text="4BHK"
                    android:textColor="@color/white"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorHighlight="@color/white"
                    />

            </LinearLayout>
         <LinearLayout
             android:id="@+id/pghostelbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:weightSum="9"
            android:visibility="gone">

            <Button
                android:id="@+id/btnhostelpg_sharing"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="@drawable/round_button"
                android:onClick="ShowDialog"
                android:text="Sharing"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnhostelpg_rooms"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="@drawable/round_button"
                android:text="Rooms"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnhostelpg_meal"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:background="@drawable/round_button"
                android:text="Meal"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/upload_photo"
            android:layout_width="152dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="Upload Photo"
            android:textColor="@color/white100"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amenities"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="Amenities"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white">
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="15"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/bed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:src="@drawable/bed"
                android:alpha="0.6"
                />
            <ImageView
                android:id="@+id/wardrobe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:alpha="0.6"
                android:src="@drawable/wardrobe"/>
            <ImageView
                android:id="@+id/table"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"

                android:alpha="0.6"
                android:src="@drawable/tablechair"/>
            <ImageView
                android:id="@+id/kitchen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:alpha="0.6"
                android:src="@drawable/kitchen"/>
            <ImageView
                android:id="@+id/fan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:alpha="0.6"
                android:src="@drawable/fancooler"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="15"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Bed-Bedding"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Wardrobe"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Table-Chairs"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Kitchen"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Fan/Cooler"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="15"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/fridge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:alpha="0.6"
                android:src="@drawable/fridge"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/geyser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:alpha="0.6"
                android:src="@drawable/geyser"/>
            <ImageView
                android:id="@+id/ac"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:alpha="0.6"
                android:src="@drawable/ac"/>
            <ImageView
                android:id="@+id/washingmachine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:alpha="0.6"
                android:src="@drawable/washingmachine"/>
            <ImageView
                android:id="@+id/parking"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:alpha="0.6"
                android:src="@drawable/parking"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="15"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Fridge"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Geyser"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="AC"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Washing Machine"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Parking"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="15"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/balcony"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:src="@drawable/balcony"
                android:alpha="0.6"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/garden"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:alpha="0.6"
                android:src="@drawable/garden"/>
            <ImageView
                android:id="@+id/pets"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:alpha="0.6"
                android:src="@drawable/pets"/>
            <ImageView
                android:id="@+id/security"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:alpha="0.6"
                android:src="@drawable/security"/>
            <ImageView
                android:id="@+id/addmore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:alpha="0.6"
                android:src="@drawable/addmore"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="15"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Balcony"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Garden"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Pets"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Security"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Add More"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white">
        </RelativeLayout>
        <Button
            android:id="@+id/pghostelflatnext_btn"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_next"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/white100"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>